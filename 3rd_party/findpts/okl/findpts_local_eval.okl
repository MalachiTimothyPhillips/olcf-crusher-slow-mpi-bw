@kernel void findpts_local_eval(
              dfloat * const out_base,   const dlong out_stride,
        const dlong  * const el_base,    const dlong el_stride,
        const dfloat * const r_base,     const dlong r_stride,
        const dlong  pn,
        @restrict const dfloat * const in, const dlong in_stride,
        struct findpts_local_data *fd){

  for(dlong i=0;i<pn;++i;@outer){

    @shared dfloat wtr[p_Nq];
    @shared dfloat wts[p_Nq];
    @shared dfloat wtt[p_Nq];
    @shared dfloat sums[p_Nq];

    const dlong el = *CAT(dlong, el, i);
    const dfloat *in_el = in + el*in_stride;

    const dfloat * r = CAT(dfloat, r, i);
    for(dlong j=0;j<p_Nq;++j;@inner){

      lagrange_eval(wtr, fd->fed.lag_data[0], p_Nq, 0, r[0], j);
      lagrange_eval(wts, fd->fed.lag_data[1], p_Nq, 0, r[1], j);
      lagrange_eval(wtt, fd->fed.lag_data[2], p_Nq, 0, r[2], j);
    }
    @barrier("local");

    // out[i] = sum_j sum_k sum_l wtr[j]*wts[k]*wtt[l]*in[j + k*nr + l*nr*ns]
    //        = sum_j wtr[j] * sum_k wts[k] * sum_l wtt[l]*in[j + k*nr + l*nr*ns]
    for (dlong j=0;j<p_Nq;++j;@inner){
      if(j<p_Nq){
        dfloat sum_j = 0;
        const dfloat *in_el_j = in_el+j;
        for(dlong k=0;k<p_Nq;++k){
          dfloat sum_k = 0;
          const dfloat *in_el_jk = in_el_j+k*p_Nq;

          for(dlong l=0;l<p_Nq;++l){
            sum_k += in_el_jk[l*p_Nq*p_Nq] * wtt[l];
          }
          sum_j += wts[k]*sum_k;
        }
        sums[j] = wtr[j]*sum_j;
      }else{
        sums[j] = 0.0;
      }
    }
    @barrier("local");
    dfloat * out = AT(dfloat, out, i);
// p_Nq is assumed to be at most 256
#if p_Nq>128
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<128&&j<p_Nq-128){
        sums[j] += sums[j+128];
      }
    }
    @barrier("local");
#endif
#if p_Nq>64
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<64&&j<p_Nq-64){
        sums[j] += sums[j+64];
      }
    }
    @barrier("local");
#endif
#if p_Nq>32
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<32&&j<p_Nq-32){
        sums[j] += sums[j+32];
      }
    }
    @barrier("local");
#endif
#if p_Nq>16
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<16&&j<p_Nq-16){
        sums[j] += sums[j+16];
      }
    }
    @barrier("local");
#endif
#if p_Nq>8
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<8&&j<p_Nq-8){
        sums[j] += sums[j+8];
      }
    }
    @barrier("local");
#endif
#if p_Nq>4
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<4&&j<p_Nq-4){
        sums[j] += sums[j+4];
      }
    }
    @barrier("local");
#endif
#if p_Nq>2
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j<2&&j<p_Nq-2){
        sums[j] += sums[j+2];
      }
    }
    @barrier("local");
#endif
    for(dlong j=0;j<p_Nq;++j;@inner){
      if(j==0){
        if(1<p_Nq){
          *out = sums[0] + sums[1];
        }else{
          *out = sums[0];
        }
      }
    }
    @barrier("local");
  }
}
